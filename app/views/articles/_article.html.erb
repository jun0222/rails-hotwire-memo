<%= turbo_frame_tag article do %>
  <div class="py-3 px-5 my-3 rounded-md border border-gray-200 shadow-md">
<%
=begin 
%>
    <h2 class="font-bold text-2xl"><%= article.title</h2> %>
<%
=end
%>
  <p class="text-2xl"><%= article.content %></p>

    <%# articleの詳細ボタン %>
    <%#= link_to "Show", article_path(article, detail: 1), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy', article_path(article), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "mt-2 rounded-lg py-3 px-5 bg-red-500 font-medium text-white" %>
    </div>


    <%# articleの編集ボタン %>
    <%= link_to 'Edit', edit_article_path(article), class: "rounded-lg py-3 ml-2 px-5 bg-blue-600 inline-block font-medium text-white" %>
  </div>
<% end %>
